DIR_NAME="FPM-Player-2.1.0-setup-Linux-x64"

mkdir output/${DIR_NAME}

cd output

cp 7zr "${DIR_NAME}"
cp ../install "${DIR_NAME}"
cp ../LICENSE "${DIR_NAME}"
cp ../uninstall "${DIR_NAME}"

chmod +x "${DIR_NAME}/7zr"
chmod +x "${DIR_NAME}/install"
chmod +x "${DIR_NAME}/uninstall"

./7zr a "${DIR_NAME}/data.bin" "../FPM-Player"
